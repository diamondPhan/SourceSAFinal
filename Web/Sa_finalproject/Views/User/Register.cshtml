@model Sa_finalproject.Models.UserModel

@{
    ViewBag.Title = "Register";
}
<style>
    .text-danger {
        color: red;
    }
</style>
<div class="col-sm-4">
    <div class="signup-form">
        <!--sign up form-->
        <h2>New User Signup!</h2>
        @using (Html.BeginForm("Register", "User", FormMethod.Post))
        {
            <ul style="list-style-type: none;">

                <li>
                    <label for="username">UserAccount</label>
                </li>
                <li>
                    @Html.TextBoxFor(m => m.UserName, htmlAttributes: new { @class = "form-control" })
                </li>
                <li><h3><font size="3" color="red">@ViewBag.error</font></h3></li>
                <li>
                    <label for="password">Password</label>
                </li>
                <li>
                    @Html.PasswordFor(m => m.Password, htmlAttributes: new { @class = "form-control" })
                </li>
                @*@Html.PasswordFor(m => m.Password, htmlAttributes: new { @class = "form-control" })*@
                <li>
                    <label for="Confirmpassword">Confirm Password</label>
                </li>
                <li>
                    @Html.PasswordFor(m => m.ConfirmPassword, htmlAttributes: new { @class = "form-control" })
                </li>
                <li>
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                </li>
                <li>
                    <label for="HoTen">Full Name:</label>
                </li>
                <li>
                    @Html.TextBoxFor(m => m.TenKhachHang, htmlAttributes: new { @class = "form-control" })
                </li>
                <li>
                    <label for="DiaChi">Address:</label>
                </li>
                <li>
                    @Html.TextAreaFor(m => m.DiaChi, htmlAttributes: new { @class = "form-control" })
                </li>
                <li>
                    <label for="SDT">Phone Number:</label>
                </li>
                <li>
                    @Html.TextBoxFor(m => m.SoDienThoai, htmlAttributes: new { @class = "form-control" })
                </li>
                <li>
                    @Html.ValidationMessageFor(m => m.SoDienThoai, "", new { @class = "text-danger" })
                </li>
                <li>
                    <label for="Email">Email:</label>
                </li>
                <li>
                    @Html.TextBoxFor(m => m.Email, htmlAttributes: new { @class = "form-control" })
                    @*<input type="email" placeholder="Email Address" />
                        <input type="password" placeholder="Password" />*@
                </li>
                <li>
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger", })
                </li>
                <button type="submit" class="btn btn-default">Signup</button>

            </ul>



        }


    </div><!--/sign up form-->
</div>
