

@model List<Sa_finalproject.Models.Product>
@{
    ViewBag.Title = "EmThich";
}
<h3>Sale Products</h3>
<hr />
@for (int i = 1; i <= Model.Count(); i++)
{
    if (i % 3 == 0)
    {
        <div class="col col_14 product_gallery">
            <a href="productdetail.html"><img width="200px" height="150px" src="@Model[i-1].Imange" alt="Product 01" /></a>
            <h3>@Model[i - 1].ProductName</h3>
            <p class="product_price">@Model[i - 1].Price</p>
            <a href="shoppingcart.html" class="add_to_cart">Add to Cart</a>
        </div>
    }
    else
    {
        <div class="col col_14 product_gallery no_margin_right">
            <a href="productdetail.html"><img width="200px" height="150px" src="@Model[i-1].Imange" alt="Product 03" /></a>
            <h3>@Model[i - 1].ProductName</h3>
            <p class="product_price">@Model[i - 1].Price</p>
            <a href="shoppingcart.html" class="add_to_cart">Add to Cart</a>
        </div>
    }
}